// 全局样式

// 设置主色调
$accentColor = #007AFF
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34

// 通用样式调整
body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

// 引入网络字体可能影响加载速度，使用本地字体代替
// 优化图片
img {
  max-width: 100%;
  height: auto;
}

// 标题样式
h1, h2, h3, h4, h5, h6 {
  font-weight: 600;
}

h1 {
  font-size: 2.2rem;
  margin-top: 1rem;
}

h2 {
  font-size: 1.65rem;
  padding-bottom: 0.5rem;
  border-bottom: 1px solid $borderColor;
  margin-top: 2.5rem;
}

h3 {
  font-size: 1.35rem;
  margin-top: 2rem;
}

// 链接样式
a {
  font-weight: 500;
  transition: color 0.2s;
}

a:hover {
  text-decoration: underline;
}

// 主页样式增强
.home .hero {
  margin: 3rem auto 1.5rem;

  img {
    max-width: 150px;
    max-height: 150px;
    object-fit: contain;
  }

  h1 {
    font-size: 3rem;
    margin: 1.5rem auto;
  }

  .description {
    max-width: 40rem;
    font-size: 1.4rem;
    line-height: 1.5;
    color: lighten($textColor, 20%);
  }

  .action-button {
    padding: 0.8rem 1.6rem;
    border-radius: 4px;
    transition: background-color 0.2s, transform 0.2s;

    &:hover {
      transform: translateY(-2px);
    }
  }
}

// 导航栏样式
.navbar {
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);

  .site-name {
    font-weight: 700;
  }

  .nav-links a {
    transition: color 0.2s, border-bottom-color 0.2s;
  }
}

// 侧边栏样式
.sidebar {
  background-color: #fcfcfc;

  .sidebar-heading {
    font-weight: 600;
  }

  a.sidebar-link {
    transition: color 0.2s, background-color 0.2s;

    &:hover {
      background-color: rgba($accentColor, 0.05);
    }

    &.active {
      font-weight: 600;
      border-left-color: $accentColor;
      background-color: rgba($accentColor, 0.08);
      position: relative;
      z-index: 2;
    }
  }

  // 修复侧边栏激活项背景重叠问题
  .sidebar-group.is-active > .sidebar-heading:not(.clickable) {
    position: relative;
    z-index: 1;
  }
}

// 代码块样式增强
div[class*="language-"] {
  border-radius: 6px;
  margin: 1.5rem 0;
  overflow: hidden;

  pre, pre[class*="language-"] {
    padding: 1.5rem;
    line-height: 1.5;
    margin: 0;
    overflow: auto;
    margin-left: 3.5rem;
  }

  code {
    color: #fff;
    padding: 0;
    background-color: transparent;
    border-radius: 0;
    font-family: Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace;
  }

  .highlight-lines {
    .highlighted {
      background-color: rgba(255, 255, 255, 0.1);
    }
  }

  &:before {
    position: absolute;
    z-index: 3;
    top: 0.8em;
    right: 1em;
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.4);
  }
}

// 内联代码样式
:not(pre) > code {
  padding: 0.25rem 0.5rem;
  margin: 0;
  font-size: 0.85em;
  background-color: rgba(27, 31, 35, 0.05);
  border-radius: 3px;
  word-break: break-word;
}

// 表格样式
table {
  border-collapse: collapse;
  width: 100%;
  display: table;
  margin: 1.5rem 0;

  tr {
    &:nth-child(2n) {
      background-color: rgba($accentColor, 0.04);
    }

    &:hover {
      background-color: rgba($accentColor, 0.08);
    }
  }

  th, td {
    padding: 0.8rem 1rem;
    border: 1px solid $borderColor;
  }

  th {
    font-weight: 600;
    background-color: rgba($accentColor, 0.06);
  }
}

// 提示块样式增强
.custom-block {
  border-radius: 6px;
  padding: 1rem 1.5rem;
  margin: 1.5rem 0;
  transition: transform 0.3s;

  .custom-block-title {
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  &.tip {
    border-color: $accentColor;
    background-color: rgba($accentColor, 0.05);

    .custom-block-title {
      color: $accentColor;
    }
  }

  &.warning {
    border-color: #e7c000;
    background-color: rgba(#e7c000, 0.05);

    .custom-block-title {
      color: darken(#e7c000, 10%);
    }
  }

  &.danger {
    border-color: #c00;
    background-color: rgba(#c00, 0.05);

    .custom-block-title {
      color: darken(#c00, 10%);
    }
  }
}

// 返回顶部按钮
.go-to-top {
  right: 2rem;
}

// 为演示添加的样式
.demo-box {
  margin: 2rem 0;
  border: 1px solid $borderColor;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 12px rgba(0,0,0,0.1);
  padding: 1.5rem;
}

// 优化模态框样式
modal-box {
  --primary-color: #5c3197;
  --background-color: #ffffff;
  --text-color: #2a2a2a;
  --border-color: #f4f5f7;
}